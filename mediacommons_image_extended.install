  variable_del('mediacommons_image_extended_djatoka_service_port');
  variable_del('mediacommons_image_extended_djatoka_service_url');
  variable_del('mediacommons_image_extended_openlayers');
  variable_del('mediacommons_image_extended_openlayers_format');
  variable_del('mediacommons_image_extended_openlayers_openurl');
  variable_del('mediacommons_image_extended_openlayer_metadaurl_service');
