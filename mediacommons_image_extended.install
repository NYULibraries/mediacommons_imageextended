function mediacommons_image_extended_uninstall() {  
  variable_del('mediacommons_image_extended_djatoka_service');
  variable_del('mediacommons_image_extended_djatoka_metadataurl');
  variable_del('mediacommons_image_extended_advanced_share');
  variable_del('mediacommons_image_extended_djatoka_service_host');
